<h2>Company Blog</h2>

<!-- Loop through all the posts you get from
     the controller. Title goes in an h3 tag.
     The content goes in a p tag. -->
     
<% @posts.each do |post| %>
  <h3><%= link_to post.title, post %></h3>
  <p><%= post.created_at %></p>
  <p><%= post.content %></p>
  <p><%= link_to 'Delete', post,
         :method => :delete,
         :data => { :confirm => 'Are you sure?' } %>
<% end %>

<p>
  <%= link_to 'Create New Blog Post', new_post_path %>
</p>